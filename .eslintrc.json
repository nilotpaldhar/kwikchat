{
	"extends": [
		"next/core-web-vitals", // Includes React + Next best practices
		"eslint:recommended", // Base JS linting rules
		"plugin:@typescript-eslint/recommended", // Core TypeScript rules
		"plugin:@typescript-eslint/stylistic", // TypeScript code style rules
		"prettier" // Disables ESLint rules that conflict with Prettier
	],
	"parser": "@typescript-eslint/parser", // TypeScript-aware parser
	"parserOptions": {
		"project": "./tsconfig.json", // Enables rules requiring full type info
		"sourceType": "module" // Allows using `import/export`
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-console": ["warn", { "allow": ["warn", "error"] }], // Avoid accidental `console.log`s
		"no-unused-vars": "off", // Disable base rule in favor of TS version
		"@typescript-eslint/no-unused-vars": [
			"warn",
			{ "argsIgnorePattern": "^_", "caughtErrors": "none" }
		],
		"@typescript-eslint/explicit-module-boundary-types": "off",
		"@typescript-eslint/no-explicit-any": "off",
		"react-hooks/exhaustive-deps": "warn", // This rule is still available through `core-web-vitals`
		"@typescript-eslint/no-empty-function": ["warn", { "allow": ["arrowFunctions"] }]
	}
}
